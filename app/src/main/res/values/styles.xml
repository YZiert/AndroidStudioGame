<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовая тема приложения -->
    <style name="Theme.SeaBattle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Стиль для кнопок главного меню -->
    <style name="MenuButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Стили для кнопок выбора сложности -->
    <style name="DifficultyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconPadding">16dp</item>
    </style>

    <style name="DifficultyButton.Easy">
        <item name="android:backgroundTint">@color/easy_color</item>
    </style>

    <style name="DifficultyButton.Medium">
        <item name="android:backgroundTint">@color/medium_color</item>
    </style>

    <style name="DifficultyButton.Hard">
        <item name="android:backgroundTint">@color/hard_color</item>
    </style>

    <style name="DifficultyButton.Unbeatable">
        <item name="android:backgroundTint">@color/unbeatable_color</item>
    </style>

    <!-- Стиль для клеток игрового поля -->
    <style name="GameCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/cell_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <!-- Стиль для диалогов -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>
    <!-- Стиль для заголовков -->
    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
</resources>
