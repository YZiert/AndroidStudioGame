<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Основной градиент океана -->
    <item>
        <shape>
            <gradient
                android:startColor="#001f3f"
                android:centerColor="#003d7a"
                android:endColor="#0074D9"
                android:angle="270"
                android:type="linear" />
        </shape>
    </item>

    <!-- Полупрозрачный слой с волнами -->
    <item android:top="100dp">
        <shape>
            <gradient
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
